        "# Step 2.1 (Revised): Assign proper column names\n",
        "df.columns = ['sms', 'label']  # 'sms' is the message, 'label' is 0 (ham) or 1 (spam)"
      ],
      "metadata": {
        "id": "F5jssd53XSZa"
      },
      "execution_count": 2,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Step 2.2: Use existing labels directly (already 0/1)\n",
        "df['label_num'] = df['label']\n",
        "\n",
        "# Step 2.3: Clean the SMS text\n",
        "import re\n",
        "\n",
        "def clean_text(text):\n",
        "    text = str(text).lower()\n",
        "    text = re.sub(r'\\W+', ' ', text)\n",
        "    text = re.sub(r'\\s+', ' ', text).strip()\n",
        "    return text\n",
        "\n",
        "df['clean_sms'] = df['sms'].apply(clean_text)\n",
        "\n",
        "# Step 2.4: Final preview\n",
        "df[['label', 'label_num', 'clean_sms']].head()\n"
      ],
